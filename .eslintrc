{
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "env": {
    "browser": true,
    "node": true
  },

  "rules": {
    "semi": "error",
    "use-isnan": "error",
    "no-unsafe-negation": "error",
    "no-cond-assign": "error",

    "no-console": "warn",
    "no-var": "warn",
    "no-extra-semi": "warn",
    "no-unused-vars": "warn",
    "no-new-object": "warn",
    "no-undef": "error"
  }
}
